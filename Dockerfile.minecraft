FROM openjdk:15-alpine
MAINTAINER Matt Fichman <matt.fichman@gmail.com>
WORKDIR /minecraft

ENV MINECRAFT_SERVER_JAR_URL=https://launcher.mojang.com/v1/objects/bb2b6b1aefcd70dfd1892149ac3a215f6c636b07/server.jar
ENV MINECRAFT_SERVER_JAR_VERSION=1.18

COPY /images/minecraft /minecraft

VOLUME /minecraft/data
VOLUME /minecraft/jars

EXPOSE 25565

CMD sh /minecraft/boot.sh
