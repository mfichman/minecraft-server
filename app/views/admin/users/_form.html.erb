<%= form_for([:admin, @user], html: { class: 'form' }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :confirmed, class: 'form-check-input' %>
    <%= f.label :confirmed, class: 'form-check-label' %>
  </div>

  <%= f.submit class: 'btn btn-primary mt-4' %>
<% end %>
