<table>
  <thead>
    <tr>
      <% fields.each do |field| %>
        <th><%= field.to_s.humanize %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% records.each do |record| %>
      <tr>
        <% fields.each do |field| %>
          <td><%= format(field, record) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
