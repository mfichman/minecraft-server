<%= form_with(url: minecraft_commands_path, data: { action: 'ajax:success->minecraft--console#send' }) do |f| %>
  <%= f.hidden_field :server_id, value: server.id %>

  <div class="input-group">
    <div class="input-group-prepend">
      <span class="input-group-text font-weight-bold" style="border-top-left-radius: 0px;">
        <%= icon_tag(:chevron_right) %>
      </span>
    </div>
    <%= f.text_field :text, class: 'form-control', style: 'border-top-right-radius: 0px;', data: { target: 'minecraft--console.input' } %>
  </div>
<% end %>
