<%= form_for([:minecraft, @server, @mod], html: { class: 'form' }) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :version, class: 'form-label' %>
    <%= f.text_field :version, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :url, 'URL', class: 'form-label' %>
    <%= f.text_field :url, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary mt-4' %>
<% end %>
