<%= form_with(url: minecraft_saves_path, class: ('hidden' if server.world.nil?), data: { controller: 'minecraft--saves', 'minecraft--saves-server-id': server.id }) do |f| %>
  <%= f.hidden_field :server_id, value: server.id %>
  <%= f.submit 'Save', class: 'dropdown-item', data: { target: 'minecraft--saves.button' } %>
<% end %>
