<%= form_for([:minecraft, @server], html: { class: 'form' }) do |f| %>
  <div class="mb-3">
    <%= f.label :host, class: 'form-label' %>
    <%= f.text_field :host, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :max_idle_time_minutes, 'Max Idle Time', class: 'form-label' %>
    <div class="input-group">
      <%= f.number_field :max_idle_time_minutes, step: 1, min: 1, class: 'form-control' %>
      <span class="input-group-text">minutes</span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :properties_text, 'Properties', class: 'form-label' %>
    <%= f.text_area :properties_text, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :ops_text, 'Operators', class: 'form-label' %>
    <%= f.text_area :ops_text, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :jar, 'Minecraft Version', class: 'form-label' %>
    <%= f.collection_select :jar_id, @jars, :id, :version, {include_blank: 'Default'}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :modder, 'Modder', class: 'form-label' %>
    <%= f.collection_select :modder_id, @modders, :id, :to_s, {include_blank: 'None'}, class: 'form-select' %>
  </div>

  <% if @mods.present? %>
    <div class="mb-3 mb-5">
      <%= f.label :mod_ids, 'Mods', class: 'form-label' %>
      <%= f.collection_check_boxes :mod_ids, @mods, :id, :to_s do |b| %>
        <div class="form-check">
          <%= b.check_box class: 'form-check-input' %>
          <%= b.label class: 'form-check-label' %>
        </div>
      <% end %>
    </div>
  <% end %>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
