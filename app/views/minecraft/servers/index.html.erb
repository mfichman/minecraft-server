<div class="mb-3 d-flex align-items-center justify-content-between">
  <h3 class="d-fixed">Servers</h3>

  <div class="btn-toolbar">
    <%= link_to icon_tag(:add) + ' Create', url_for(action: :new), class: 'btn btn-sm btn-primary' %>
  </div>
</div>

<div class="card">
  <ul class="list-group list-group-flush">
    <% @servers.each do |server| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <code><%= link_to server.host, [:minecraft, server] %></code>
        <div>
          <%= link_to icon_tag(:visibility), [:minecraft, server], class: 'btn btn-secondary btn-sm' %>
          <%= link_to icon_tag(:edit), [:edit, :minecraft, server], class: 'btn btn-secondary btn-sm' %>
          <%= link_to icon_tag(:delete), [:minecraft, server], class: 'btn btn-danger btn-sm', method: :delete, confirm: 'Are you sure?' %>
        </div>
      </li>
    <% end %>
  <ul>
</div>
