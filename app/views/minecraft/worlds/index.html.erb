<div class="mb-3 d-flex align-items-center justify-content-between">
  <h3 class="d-fixed">Worlds</h3>

  <div class="btn-toolbar">
    <%= link_to icon_tag(:add) + ' Create', url_for(action: :new), class: 'btn btn-sm btn-primary' %>
  </div>
</div>

<div class="card">
  <ul class="list-group list-group-flush">
    <% @worlds.each do |world| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to world.name, [:minecraft, world] %>
        <div>
          <%= link_to icon_tag(:visibility), [:minecraft, world], class: 'btn btn-secondary btn-sm' %>
          <%= link_to icon_tag(:delete), [:minecraft, world], class: 'btn btn-danger btn-sm', method: :delete, confirm: 'Are you sure?' %>
        </div>
      </li>
    <% end %>
  <ul>
</div>
