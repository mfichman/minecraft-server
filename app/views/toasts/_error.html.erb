<div class="toast bg-danger ml-auto show" data-autohide="false">
  <div class="toast-header">
    <strong class="mr-auto"><%= header %></strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">
      <span>&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>
