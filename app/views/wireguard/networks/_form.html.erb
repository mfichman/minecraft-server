<%= form_for([:wireguard, @network], html: { class: 'form' }) do |f| %>
  <div class="mb-3">
    <%= f.label :host, class: 'form-label' %>
    <%= f.text_field :host, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :ip_address, class: 'form-label' %>
    <%= f.text_field :ip_address, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
