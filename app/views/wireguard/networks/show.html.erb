<h3 class="mb-4"><code class="text-white"><%= @network.host %></code></h3>

<h6>Network</h6>
<div class="card mb-4">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <div class="row">
        <div class="col-sm-2">IP Address</div>
        <div class="col"><code><%= @network.ip_address %></code></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-sm-2">Public Key</div>
        <div class="col"><code><%= @network.key.public_key %></code></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col-sm-2">Private Key</div>
        <div class="col"><code><%= @network.key.private_key %></code></div>
      </div>
    </li>
  </ul>
</div>

<%= render 'wireguard/peers/collection', peers: @network.peers %>

<%= link_to 'Create Peer', new_wireguard_peer_path(network_id: @network), class: 'btn btn-primary mb-3' %>
<%= link_to 'Sync Network Conf', wireguard_syncs_path(network_id: @network), method: :post, remote: true, class: 'btn btn-primary mb-3' %>

