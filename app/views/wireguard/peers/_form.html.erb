<%= form_for([:wireguard, @peer], html: { class: 'form' }) do |f| %>
  <%= f.hidden_field :network_id %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :ip_address, 'IP Address (Optional)', class: 'form-label' %>
    <%= f.text_field :ip_address, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
